<div class="container">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-3"></div>
        <div class="titulo col-md-6" style="float:right;">
          <div class="fundo2">
              <h2>Sistema de registro das Atividades Teórico-Práticas de Aprofundamento (ATPA)</h2>
          </div>
        </div>

        <div class="col-md-3 login">
          <!-- //Início do form para identificação do login para as credenciais de email e senha -->
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <div class="login_usuario">
                <div class="imagem_input">
                  <%= image_tag 'man-user.png', alt: 'user' %>
                </div>

                <div class="col-md-10">
                  <%= f.email_field :email, autofocus: true, placeholder: 'Login' %>
                </div>
              </div>
            </div>

            <div class="field">
              <div class="login_usuario">
                <div class="imagem_input">
                  <%= image_tag 'lock2.png', alt: 'lock' %>
                </div>

                <div class="col-md-10">
                  <%= f.password_field :password, placeholder: 'Senha' %>
                </div>
              </div>
            </div>

            <div class="button_session">
                <%= f.submit "Entrar" %>
            </div>
            <% end %>

             <%= render "devise/shared/links" %>
             <%= link_to "Voltar", welcome_index_path, :class => "btn btn-success" %>
        </div>
     </div>
  </div>

  <style type="text/css">
    .container ul li {
      margin-top:-5px;
      margin-left:-40px;
    }
    .login {
      padding:20px;
      background-color: rgba(10,10,10,0.7);
      border-radius: 20px;
    }
    .login_usuario {
      background-color: rgba(245,245,245,0.8);
      height: 50px;
      padding-top:10px;
      border-radius: 10px;
    }
    label {
      color: white;
    }
    .button_session input {
      background-color: rgba(10,200,10,0.7);
      color: white;
      border: none;
      width: 150px;
    }
    .btn-success {
      background-color: rgba(10,200,10,0.7);
      color: white!important;
      border: none;
      width: 150px;
    }
    .btn-success:hover {
      background-color: rgba(10,200,10,0.7);
    }
    .col-md-3 {
      text-align: center;
    }
    .imagem_input, .col-md-10 {
      display: inline;
      float: left;
    }
    @media (max-width: 991.98px) {
      .login {
        margin-top:300px;
        width: 60%;
        margin-left:20%;
      }
      .imagem_input, .col-md-10 {
        display: inline;
      }
      .col-md-10 input {
        width:70%;
    }

    @media (max-width: 767.98px) {
    }

    @media (max-width: 575.98px) {
      .imagem_input img {
        display: none;
      }
      .login {
        margin-top:400px;
        width: 60%;
        margin-left:20%;
      }
    }

    @media (max-width: 1199.98px) { ... }
  </style>
</div>
